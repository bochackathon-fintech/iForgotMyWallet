<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>

		<item name="android:textAppearanceButton">@style/ButtonTextWhiteTheme</item>
        <item name="colorButtonNormal">@color/app_primary</item>
		<item name="colorControlHighlight">@color/material_light_green_500</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">

    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>
	
    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DrawerItemTextAppearance">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
    </style>
   
	<style name="ButtonTextWhiteTheme" parent="Base.Widget.AppCompat.Button">  
   		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textAllCaps">true</item>
	</style>  
	
</resources>